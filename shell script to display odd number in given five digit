n=0
while ! [[ $n =~ "^[-+]?[0-9]+$" ]]
do
read -p "Enter a number : " n
l=${#n}
if [[ $n =~ ^[+-]?[0-9]+$ ]];then
if [[ $n =~ ^[+-] ]];then
i=f
if   
if [[ $n =~ ^[0-9] ]];then
i=1
if
while [ $i -le $l ]
do
d=$(echo $n | cut -c $i)
echo $d    
i=$(($i + 2)) 
done
break    
if
done
